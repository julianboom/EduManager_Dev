@using Model;
@{
    Layout = null;
    AdjustInfo item = ViewBag.adjustinfo;
    Person person = ViewBag.person;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title></title>
    @RenderPage("~/Views/Share/bootstrap.cshtml")
    <script src="~/Resource/edit.js"></script>
    <script src="~/Web/guid.js"></script>

</head>
<body>
    @RenderPage("~/Views/Share/GuanLian2.cshtml")
    <div>

        <form id="Adjust" name="Adjust" method="post" class="form-inline">
            <div class="row">
                <div class="col-xs-12">
                    <h3 class="Gradient">组织调整情况登记表</h3>
                </div>
                <input autocomplete = "off" style="display:none" type="text" id="PersonID" name="PersonID" value="@person.ID" />
                <input autocomplete = "off" style="display:none" type="text" value="@item.ID" id="ID" name="ID" />
                <input autocomplete = "off" style="display:none" type="text" value="@item.HandleStaff" id="HandleStaff" name="HandleStaff" />
                <input autocomplete = "off" style="display:none" type="text" value="@item.HandleDept" id="HandleDept" name="HandleDept" />
            </div>
            <div class="row">
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="PersonName">姓名：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input autocomplete = "off" class="form-control" type="text" id="PersonName" required="required" name="PersonName" value="@item.PersonName" data-options="required:true" />
                    <button class="btn btn-success" type="button" onclick="OpenModal()" style="position:absolute;top:0;right:-80px;z-index:10">人员识别</button>

                </div>
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="IDCard">身份证号：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input autocomplete = "off" class="form-control" type="text" value="@item.IDCard" id="IDCard"  name="IDCard" />
                </div>
            </div>
            <div class="row">
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="PersonUnit">所在单位：</label>
                </div>
                <div class="col-xs-6 margin-top-10">
                    <input autocomplete = "off" class="form-control" type="text" value="@item.PersonUnit" id="PersonUnit" required="required" name="PersonUnit" />
                </div>
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="PersonDuty">职级：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <select id="PersonPolitic" class="form-control selectpicker"  name="PersonDuty">
                        <option value="@item.PersonDuty">@item.PersonDuty</option>
                        <option value="正厅">正厅</option>
                        <option value="副厅">副厅</option>
                        <option value="正处">正处</option>
                        <option value="副处">副处</option>
                        <option value="正科">正科</option>
                        <option value="副科">副科</option>
                        <option value="一般干部">一般干部</option>
                        <option value="其他人员">其他人员</option>
                    </select>
                </div>

            </div>


            <div class="row">
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="FilingCode">处理文号：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input autocomplete = "off" class="form-control" type="text" value="@item.FilingCode" id="FilingCode"  name="FilingCode" />
                </div>
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="AdjustTime">调整时间：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <div class="form-group">
                        <input autocomplete = "off" class="laydate-icon form-control layer-date" required="required" name="AdjustTime" value="@item.AdjustTime">
                        
                    </div>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="PersonName">处理机关：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input autocomplete = "off" id="FilingUnit" name="FilingUnit" type="text" class="form-control" required="required" value="@item.FilingUnit">
                </div>

            </div>
            <div class="row">

                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="AdjustType">调整方式：</label>
                </div>
                <div class="col-xs-10 margin-top-10">
                    <textarea rows="5" id="AdjustType" name="AdjustType" required="required" class="form-control">@item.AdjustType</textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="AdjustReason">调整事由：</label>
                </div>
                <div class="col-xs-10 margin-top-10">
                    <textarea rows="5" id="AdjustReason"  name="AdjustReason" class="form-control">@item.AdjustReason</textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="WagesChange">工资执行情况：</label>
                </div>
                <div class="col-xs-10 margin-top-10">
                    <textarea rows="5" id="WagesChange"  name="WagesChange" class="form-control">@item.WagesChange</textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="AdjustReason">备注：</label>
                </div>
                <div class="col-xs-10 margin-top-10">
                    <textarea rows="5" id="Remark"  name="Remark" class="form-control">@item.Remark</textarea>
                </div>
            </div>
        </form>
        <div class="row">
            <div class="col-xs-12 margin-top-10" style="margin-top:30px;">
                <label style="float:left">组织调整相关文书</label>
            </div>
            <div class="col-xs-1 margin-top-10">
                <input autocomplete = "off" id="file_upload" name="file_upload" type="file" multiple="true" />
            </div>
            <div class="col-xs-2 margin-top-10">
                <a class="layui-btn " id="btnUpload" href="javascript:checkQueue()">上传</a>
                <a class="layui-btn " id="btnCancelUpload" data-options="iconCls:'icon-cancel'" href="javascript:checkCancel()">取消</a>
            </div>
            <div class="col-xs-9 margin-top-10">
                <div id="queue"></div>
            </div>
            <div class="col-xs-12 margin-top-10">
                <div style="width:100%;">
                    <table id="Adjust_table" class="table table-striped table-no-bordered table-hover"></table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 margin-top-10" style="margin-top:30px;">
                <label style="float:left">工资变动相关文书</label>
            </div>
            <div class="col-xs-1 margin-top-10">
                <input autocomplete = "off" id="file_uploadGongZi" name="file_upload" type="file" multiple="true" />
            </div>
            <div class="col-xs-2 margin-top-10">
                <a class="layui-btn " id="btnUpload" href="javascript:checkQueueGongZi()">上传</a>
                <a class="layui-btn " id="btnCancelUpload" data-options="iconCls:'icon-cancel'" href="javascript:checkCancelGongZi()">取消</a>
            </div>
            <div class="col-xs-9 margin-top-10">
                <div id="queueGongZi"></div>
            </div>
            <div class="col-xs-12 margin-top-10">
                <div style="width:100%;">
                    <table id="AdjustGongZi_table" class="table table-striped table-no-bordered table-hover"></table>
                </div>
            </div>
        </div>
        <div align="center" style="margin-top:20px;">
            <button type="button" class="layui-btn" onclick="AdjustListSubmit()">保存</button>
        </div>
    </div>
    @RenderPage("~/Views/Share/delConfirm.cshtml")
</body>
</html>
<script>
    function checkQueue() {
        if ($("#queue").children().length == 0) {
            alert( "请先点击浏览选择要上传的文件！");
        } else {
            $('#file_upload').uploadifive('upload');
        }
    }
    function checkCancel() {
        if ($("#queue").children().length == 0) {
            alert( "没有待上传的文件！");
        } else {

            $('#file_upload').uploadifive('clearQueue');
            refeshGrid();
        }
    }
    function refeshGrid() {
        $('#Adjust_table').bootstrapTable("refresh", { url: '/File/GetList?ID=@item.ID&Type=Adjust' });
    }
    function delcfm(id) {
        $('#id').val(id);//给会话中的隐藏属性URL赋值
        $('#idName').val("ID");
        $('#backMsg').val("Adjust_table");
        $('#urlDel').val("/File/Delete");
        $('#urlBack').val("/File/GetList?ID=@item.ID&Type=Adjust");
        $('#delcfmModel').modal();
    }
    $(function () {
        var a = 0;
        $('#file_upload').uploadifive({
            'auto': false,
            'fileSizeLimit': '102400KB',
            'buttonText': '浏  览',
            'multi': true,
            'queueID': 'queue',
            'uploadScript': '/File/Upload',
            'formData': { 'ID':'@item.ID', 'type': 'Adjust' },
            'onUploadComplete': function (file, data) {
                a = a + 1;
                if ($("#queue").children().length - a == 0) {
                    checkCancel();
                    a = 0;
                }
            }
        });
        $('#Adjust_table').bootstrapTable({
            method: 'post',
            url: '/File/GetList?ID=@item.ID&Type=Adjust',
            striped: true,
            clickToSelect: true,
            pageSize: 10,
            sidePagination: 'server',
            pageList: [10, 20, 50, 100, 200, 500],
            queryParamsType: 'limit',
            sortName: 'ID',
            sortOrder: 'asc',
            columns: [
                { field: 'FileName', title: '文件名', width: 200, editable: false, },
                { field: 'opt', title: '操作', width: 100, editable: false, formatter: operateFormatterAdjust },
            ],
        });
        function operateFormatterAdjust(value, row, index) {
            return [
            '<a  href="/File/Download?ID=' + row.ID + '" id="btn_detail" type="button" class="layui-btn layui-btn-danger layui-btn-sm" style="margin-right:20px;"><span class="glyphicon glyphicon-floppy-save"></span>下载</a>',
            '<a  href="javascript:delcfm(\'' + row.ID + '\')"  type="button" class="layui-btn layui-btn-danger layui-btn-xs"><span class="glyphicon glyphicon-trash"></span>删除</a>',
            ].join('');
        }
    });
    function AdjustListSubmit() {
        if ($("#PersonID").val() == "") {
            layer.msg("请填写人员姓名");
            return;
        }
        $('#Adjust').form('submit', {
            url: "/Adjust/Save",
            onSubmit: function () {

            },
            success: function (data) {
                layer.alert("保存成功", function () {
                    window.parent.layer.closeAll();

                    window.location.href = "/Adjust/AdjustList";
                });               
            }
        });
    }
    function Canel() {
        window.location.href = "/Adjust/AdjustList";
    }
    function delFile(ID) {
        removeObjWithConfirm(ID, "ID", '/File/Delete', "funAfterDel")
    }
    function funAfterDel() {
        refeshGrid();
    }

    //
    $(function () {
        var a = 0;
        $('#file_uploadGongZi').uploadifive({
            'auto': false,
            'fileSizeLimit': '102400KB',
            'buttonText': '浏  览',
            'multi': true,
            'queueID': 'queueGongZi',
            'uploadScript': '/File/Upload',
            'formData': { 'ID': '@item.ID', 'type': 'AdjustGongZi' },
            'onUploadComplete': function (file, data) {
                a = a + 1;
                if ($("#queueGongZi").children().length - a == 0) {
                    checkCancelGongZi();
                    a = 0;
                }
            }
        });
        $('#AdjustGongZi_table').bootstrapTable({
            method: 'post',
            url: '/File/GetList?ID=@item.ID&Type=AdjustGongZi',
            striped: true,
            clickToSelect: true,
            pageSize: 10,
            sidePagination: 'server',
            pageList: [10, 20, 50, 100, 200, 500],
            queryParamsType: 'limit',
            sortName: 'ID',
            sortOrder: 'asc',
            columns: [
                { field: 'FileName', title: '文件名', width: 200, editable: false, },
                { field: 'opt', title: '操作', width: 100, editable: false, formatter: operateFormatterAdjustGongZi },
            ],
        });
        function operateFormatterAdjustGongZi(value, row, index) {
            return [
            '<a  href="/File/Download?ID=' + row.ID + '" id="btn_detail" type="button" class="layui-btn layui-btn-danger layui-btn-sm" style="margin-right:20px;"><span class="glyphicon glyphicon-floppy-save"></span>下载</a>',
            '<a  href="javascript:delcfmGongZi(\'' + row.ID + '\')"  type="button" class="layui-btn layui-btn-danger layui-btn-xs"><span class="glyphicon glyphicon-trash"></span>删除</a>',
            ].join('');
        }
    });
    function checkQueueGongZi() {
        if ($("#queueGongZi").children().length == 0) {
            alert("请先点击浏览选择要上传的文件！");
        } else {
            $('#file_uploadGongZi').uploadifive('upload');
        }
    }
    function checkCancelGongZi() {
        if ($("#queueGongZi").children().length == 0) {
            alert("没有待上传的文件！");
        } else {
            $('#file_uploadGongZi').uploadifive('clearQueue');
            refeshGridGongZi();
        }
    }
    function refeshGridGongZi() {
        $('#AdjustGongZi_table').bootstrapTable("refresh", { url: '/File/GetList?ID=@item.ID&Type=AdjustGongZi' });
    }
    function delFileGongZi(ID) {
        removeObjWithConfirm(ID, "ID", '/File/Delete', "funAfterGongZiDel")
    }
    function funAfterGongZiDel() {
        refeshGridGongZi();
    }
    function delcfmGongZi(id) {
        $('#id').val(id);//给会话中的隐藏属性URL赋值
        $('#idName').val("ID");
        $('#backMsg').val("AdjustGongZi_table");
        $('#urlDel').val("/File/Delete");
        $('#urlBack').val("/File/GetList?ID=@item.ID&Type=AdjustGongZi");
        $('#delcfmModel').modal();
    }
</script>