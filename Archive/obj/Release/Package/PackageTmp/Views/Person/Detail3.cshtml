<script>
  $.ajax({
         url: "/File/GetListAll",
        data: {
            "ID": "@item.ID"
        },
        type: "post",
        success: function (data) {

            for (var i in data) {
                var obj = data[i];
                console.log(obj.Type);
                var filetype = obj.SaveName;
                console.log(filetype);
                if (filetype.indexOf("doc")>-1)
                    var str = "<dd><img  onclick = \"Affix(\'" + obj.ID + "\')\" style='margin-right:4px;margin-bottom:15px;height:25px' src='/Resource/images/search.svg'><a href = '/UploadFiles/" + obj.SaveName + "'>" + "   " + ChangeDateFormatSimple(obj.Timestamp) + "   " + obj.FileName + " </a></dd>";
                else
                    var str = "<dd><img  onclick = \"NoAffix(\'" + obj.ID + "\')\" style='margin-right:4px;margin-bottom:15px;height:25px' src='/Resource/images/search.svg'><a href = '/UploadFiles/" + obj.SaveName + "'>" + "   " + ChangeDateFormatSimple(obj.Timestamp) + "   " + obj.FileName + " </a></dd>";

                switch (obj.Type) {
                    case "RiskPoint": $("#riskpoint dl").append(str); break;
                    case "Democratic": $("#meeting dl").append(str); break;
                    case "Major": $("#issues dl").append(str); break;
                    case "Audit": $("#report dl").append(str); break;
                    case "Report": $("#report dl").append(str); break;

                    case "IncorruptReply": $("#reply dl").append(str); break;

                }

            }
            

        }
       });
</script>
