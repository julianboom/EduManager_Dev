@using Model;
@{
    Layout = null;
    FirstForm item = ViewBag.firstform;
    Dept dept = ViewBag.dept;

}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title></title>
    @*@RenderPage("~/Views/Share/Include.cshtml")*@
    <script src="~/Resource/edit.js"></script>
    @* <link href="~/Resource/form.css" rel="stylesheet" />*@
    <script src="~/Web/guid.js"></script>
    @RenderPage("~/Views/Share/bootstrap.cshtml")
</head>
<body>
    <div class="row" style="margin-top:20px;">
        <div class="col-xs-1">
            <input name="b_print" type="button" class="ipt btn btn-primary " id="b_print" onclick="printdiv('div_print')" value="打印">
        </div>
    </div>
    <div id="div_print">
        <form id="FirstForm" name="FirstForm" method="post" class="form-inline">
            <div class="row">
                <div class="col-xs-12">
                    <h3 class="Gradient">党委（党组）落实“第一种形态”情况登记表</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="DeptName">填报单位：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input readonly class="form-control" type="text" id="DeptName" name="DeptName" value="@dept.DeptName" />
                </div>
            </div>
            <div class="row">
                <input readonly style="display:none" type="text" value="@item.ID" id="ID" name="ID" />
                <input readonly style="display:none" type="text" value="@item.HandleStaff" id="HandleStaff" name="HandleStaff" />
                <input readonly style="display:none" type="text" value="@item.HandleDept" id="HandleDept" name="HandleDept" />
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="PersonName">被实施者姓名：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input readonly class="form-control" type="text" id="PersonName" name="PersonName" value="@item.PersonName" />
                </div>
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="IDCard">身份证号：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input readonly class="form-control" type="text" id="IDCard" name="IDCard" value="@item.IDCard" />
                </div>
            </div>
            <div class="row">
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="PersonGender">性别：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input readonly class="form-control" type="text" id="PersonGender" name="PersonGender" value="@item.PersonGender" />
                </div>
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="PersonArea">地区或部门：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input readonly class="form-control" type="text" id="PersonArea" name="PersonArea" value="@item.PersonArea" />
                </div>
            </div>
            <div class="row">
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="KeyTrade">重点行业：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input readonly class="form-control" type="text" id="KeyTrade" name="KeyTrade" value="@item.KeyTrade" />
                </div>
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="KeyArea">重点领域：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input readonly class="form-control" type="text" id="KeyArea" name="KeyArea" value="@item.KeyArea" />
                </div>
            </div>
            <div class="row">
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="PersonPolitic">政治面貌：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input readonly class="form-control" type="text" id="PersonPolitic" name="PersonPolitic" value="@item.PersonPolitic" />
                </div>
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="PersonUnit">单位：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input readonly class="form-control" type="text" id="PersonUnit" name="PersonUnit" value="@item.PersonUnit" />
                </div>
            </div>
            <div class="row">
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="PersonDuty">职务：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input readonly class="form-control" type="text" id="PersonDuty" name="PersonDuty" value="@item.PersonDuty" />
                </div>
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="PersonLevel">级别：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input readonly class="form-control" type="text" id="PersonLevel" name="PersonLevel" value="@item.PersonLevel" />
                </div>
                <div class="col-xs-8 margin-top-10">
                </div>
            </div>
            <div class="row">
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="MainProblem">违规违纪问题（请列明时间、人物、事情经过、原因等：</label>
                </div>
                <div class="col-xs-10 margin-top-10">
                    <textarea readonly rows="5" id="MainProblem" name="MainProblem" class="form-control">@item.MainProblem</textarea>
                </div>
                <div style="clear:both"></div>
            </div>
            <div class="row">
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="HandleUnit">实施机关：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input readonly class="form-control" type="text" id="HandleUnit" name="HandleUnit" value="@item.HandleUnit" />
                </div>
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="HandlePerson">实施者姓名：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input readonly class="form-control" type="text" id="HandlePerson" name="HandlePerson" value="@item.HandlePerson" />
                </div>
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="HandleIDCard">身份证号：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input readonly class="form-control" type="text" id="HandleIDCard" name="HandleIDCard" value="@item.HandleIDCard" />
                </div>
                <div style="clear:both"></div>
            </div>
            <div class="row">
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="HandleDuty">职务：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input readonly class="form-control" type="text" id="HandleDuty" name="HandleDuty" value="@item.HandleDuty" />
                </div>
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="HandleLevel">级别：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input readonly class="form-control" type="text" id="HandleLevel" name="HandleLevel" value="@item.HandleLevel" />
                </div>
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="FirstFormType">运用“第一种形态”类别：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input readonly class="form-control" type="text" id="FirstFormType" name="FirstFormType" value="@item.FirstFormType" />
                </div>
                <div style="clear:both"></div>
            </div>
            <div class="row">
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="HandleDetail">处理文号：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input readonly class="form-control" type="text" id="HandleDetail" name="HandleDetail" value="@item.HandleDetail" />
                </div>
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="HandleTime">实施时间：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <div class="form-group">
                        <input readonly class=" form-control" name="HandleTime" value="@item.HandleTime">
                    </div>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="IsAssigned">是否上级交办：</label>
                </div>
                <div class="col-xs-2 margin-top-10">
                    <input readonly class="form-control" type="text" id="IsAssigned" name="IsAssigned" value="@item.IsAssigned" />
                </div>
                <div style="clear:both"></div>
                <div style="clear:both"></div>
            </div>
            <div class="row">
                <div class="col-xs-2 margin-top-10">
                    <label class="margin-5" for="Remark">备注：</label>
                </div>
                <div class="col-xs-10 margin-top-10">
                    <textarea readonly rows="5" id="Remark" name="Remark" class="form-control">@item.Remark</textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 margin-top-10">
                    <div style="width:100%;margin-top:20px;">
                        <table id="FirstForm_table" class="table table-striped table-no-bordered table-hover"></table>
                    </div>
                </div>
            </div>
        </form>
    </div>
 
</body>
</html>
<script>
    $('#FirstForm_table').bootstrapTable({
        method: 'post',
        url: '/File/GetList?ID=@item.ID&Type=FirstForm',
        striped: true,
        clickToSelect: true,
        pageSize: 10,
        sidePagination: 'server',
        pageList: [10, 20, 50, 100, 200, 500],
        queryParamsType: 'limit',
        sortName: 'ID',
        sortOrder: 'asc',
        columns: [
            { field: 'FileName', title: '文件名', width: 200, editable: false, },
            { field: 'opt', title: '操作', width: 100, editable: false, formatter: operateFormatter },
        ],
    });
    function operateFormatter(value, row, index) {
        return [
            '<a  href="/File/Download?ID=' + row.ID + '" id="btn_detail" type="button" class=""><span class="glyphicon glyphicon-floppy-save"></span>下载</a>',
        ].join('');
    }


</script>