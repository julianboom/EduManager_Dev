
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script src="~/Resource/Echarts/echarts.js"></script>
    <script src="~/Resource/jquery-1.10.2.min.js"></script>
    <title>成绩综合分析</title>
</head>
<body>
    <div> 
        <h2>信号与系统考试通过率</h2>
        <div id = "CETPass" style="width: 600px;height:400px;"></div>
    </div>


</body>
</html>

<script type="text/javascript">
    var CETChart = echarts.init(document.getElementById("CETPass"));
    option = {
        title: {
            text: '信号与系统考试统计',
            x: 'center'
        },
        tooltip: {
            trigger: 'item',
            formatter: "{a} <br/>{b} : {c} ({d}%)"
        },
        legend: {
            orient: 'vertical',
            left: 'left',
            data: ["不通过","通过","优秀"]
        },
        series: [
            {
                name: '比例',
                type: 'pie',
                radius: '55%',
                center: ['50%', '60%'],
                data: [],
                itemStyle: {
                    emphasis: {
                        shadowBlur: 10,
                        shadowOffsetX: 0,
                        shadowColor: 'rgba(0, 0, 0, 0.5)'
                    }
                }
            }
        ]
    };

    CETChange("caizonglinhaoshuai");
    function CETChange(cet) {
        $.ajax({
            type: "POST",
            url: "/BigData/CetJson",
            data: { "Cet": cet },
            success: function (data) {
                CETChart.setOption({
                    series: {
                        data: [{ value:data.cet4, name:"优秀" },
                            { value:data.cet6, name:"不通过"},
                            { value:data.total, name:"通过" }]
                    }
                });
                console.log(data);
            }
    });
    }
 

    // 使用刚指定的配置项和数据显示图表。
    CETChart.setOption(option);



</script>
